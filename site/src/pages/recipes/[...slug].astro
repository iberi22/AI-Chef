---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const recipes = await getCollection('dishes');
  return recipes.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.id.split('/').pop()?.replace('.md', '') || 'Receta'}>
  <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="p-8">
      <a href="javascript:history.back()" class="inline-flex items-center text-primary hover:text-primary/80 mb-6 transition-colors">
        â† Volver
      </a>

      <article class="prose prose-lg max-w-none prose-headings:text-dark prose-a:text-primary hover:prose-a:text-primary/80 prose-img:rounded-xl">
        <Content />
      </article>
    </div>
  </div>
</Layout>
