---
interface Props {
	title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI-Chef Recipes" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-light text-dark min-h-screen flex flex-col font-sans">
		<header class="bg-primary text-white shadow-lg sticky top-0 z-50">
			<nav class="container mx-auto px-4 py-4 flex justify-between items-center">
				<a href={baseUrl} class="text-2xl font-bold flex items-center gap-2">
					üë®‚Äçüç≥ AI-Chef
				</a>
				<div class="hidden md:flex gap-6">
					<a href={baseUrl} class="hover:text-secondary transition-colors">Inicio</a>
					<a href="https://github.com/iberi22/AI-Chef" target="_blank" class="hover:text-secondary transition-colors">GitHub</a>
				</div>
			</nav>
		</header>

		<main class="container mx-auto px-4 py-8 flex-grow">
			<slot />
		</main>

		<footer class="bg-dark text-white py-6 mt-auto">
			<div class="container mx-auto px-4 text-center">
				<p>&copy; {new Date().getFullYear()} AI-Chef. Open Source Recipe Collection.</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* Custom scrollbar */
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #f1f1f1;
	}
	::-webkit-scrollbar-thumb {
		background: #888;
		border-radius: 5px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
</style>
