---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI-Chef Recipes" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#ff7043" />
		<link rel="icon" type="image/png" href={`${baseUrl}/images/favicon.png`} />
		<link rel="apple-touch-icon" href={`${baseUrl}/images/favicon.png`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Patrick+Hand&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" rel="stylesheet" />
		<ViewTransitions />
		<script is:inline define:vars={{ baseUrl }}>
			// Service Worker Registration
			if ('serviceWorker' in navigator) {
				window.addEventListener('load', () => {
					navigator.serviceWorker.register(`${baseUrl}/sw.js`).then(registration => {
						console.log('SW registered: ', registration);
					}).catch(registrationError => {
						console.log('SW registration failed: ', registrationError);
					});
				});
			}

			const setDarkMode = (document) => {
				const getThemePreference = () => {
					if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
						return localStorage.getItem('theme');
					}
					return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
				};
				const isDark = getThemePreference() === 'dark';
				document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
			};

			setDarkMode(document);

			document.addEventListener('astro:after-swap', () => {
				setDarkMode(document);
			});

			// History Tracking
			document.addEventListener('astro:page-load', () => {
				if (window.location.pathname === '/' || window.location.pathname === baseUrl + '/') return;

				const history = JSON.parse(localStorage.getItem('recipe_history') || '[]');
				const currentPath = window.location.pathname;
				const currentTitle = document.title;

				// Remove existing entry for this path to move it to top
				const filteredHistory = history.filter(item => item.path !== currentPath);

				filteredHistory.unshift({
					path: currentPath,
					title: currentTitle,
					timestamp: Date.now()
				});

				// Keep last 20 items
				const newHistory = filteredHistory.slice(0, 20);

				localStorage.setItem('recipe_history', JSON.stringify(newHistory));
			});
		</script>
	</head>
	<body class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark min-h-screen font-display selection:bg-primary selection:text-black transition-colors duration-300">
		<div class="relative flex min-h-screen w-full flex-col overflow-x-hidden dark:bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] dark:from-[#1a1a2e] dark:via-background-dark dark:to-background-dark">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root {
		--font-display: 'Patrick Hand', cursive;
		--font-body: 'Open Sans', sans-serif;

		/* Food App Palette - Tomato Red & Fresh Green */
		--color-primary: #FF6347;
		--color-secondary: #4CAF50;
	}

	body {
		font-family: var(--font-body);
	}

	h1, h2, h3, h4, h5, h6, .font-display {
		font-family: var(--font-display);
	}

	.glass-panel {
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(12px);
		border: 1px solid rgba(0, 0, 0, 0.05);
	}
	.dark .glass-panel {
		background: rgba(18, 18, 18, 0.85);
		backdrop-filter: blur(16px);
		border: 1px solid rgba(255, 255, 255, 0.08);
	}

	.card-glass {
		background: #fff;
		border: 1px solid #e5e7eb;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
		transition: transform 0.2s, box-shadow 0.2s;
	}
	/* Collage effect for cards */
	.card-glass:hover {
		transform: rotate(-1deg) scale(1.02);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
		z-index: 10;
	}

	.dark .card-glass {
		background: #1f2937;
		border-color: #374151;
	}

	/* Custom scrollbar */
	::-webkit-scrollbar {
		width: 8px;
	}
	::-webkit-scrollbar-track {
		background: transparent;
	}
	::-webkit-scrollbar-thumb {
		background: var(--color-primary);
		border-radius: 4px;
	}
	.dark ::-webkit-scrollbar-thumb {
		background: var(--color-primary);
	}
	::-webkit-scrollbar-thumb:hover {
		background: var(--color-primary);
		filter: brightness(1.1);
	}
</style>
